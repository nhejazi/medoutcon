citHeader("Please cite the following works when using the 'medoutcon' software
           package, including both the software tool and the article describing
           the statistical methodology.")

year <- format(Sys.Date(), "%Y")
note <- sprintf("R package version %s", meta$Version)

bibentry(bibtype = "Manual",
         title = "{medoutcon}: Efficient causal mediation under intermediate confounding",
         author = c(person("Nima", "Hejazi", "S"),
                    person("Iván", "Díaz"),
                    person("Kara", "Rudolph", "E")),
         year = year,
         note = note,
         doi = "",
         url = "https://github.com/nhejazi/medoutcon")

bibentry(bibtype = "Article",
         journal = "arxiv",
         title = "Non-parametric efficient causal mediation with intermediate confounders",
         author = c(person("Iván", "Díaz"),
                    person("Nima", "Hejazi", "S"),
                    person("Kara", "Rudolph", "E"),
                    person("Mark", "van der Laan", "J")),
         year = "2019+",
         doi = "",
         url = "")
